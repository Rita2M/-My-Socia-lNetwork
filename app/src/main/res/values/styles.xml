        <item name="minHeight">@dimen/icon_button_min_size</item>
        <item name="minWidth">@dimen/icon_button_min_size</item>
    </style>
    <style name="Widget.AppTheme.ParticipantsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/share_color</item>
        <item name="android:textColor">@color/share_color</item>
        <item name="minWidth">@dimen/icon_button_min_size</item>
        <item name="minHeight">@dimen/icon_button_min_size</item>
    </style>
    <style name="Widget.AppTheme.AvatarShape" parent="Theme.MaterialComponents">
        <item name="minHeight">@dimen/avatar_size</item>
        <item name="minWidth">@dimen/avatar_size</item>
        <item name="android:src">@drawable/shape_avatar</item>
    </style>
    <style name="Widget.AppTheme.AddButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:src">@drawable/ic_add_24</item>

    </style>


</resources>
